
@model csbb0328.ViewModels.LoginViewModel

<div class="user-login container">

<h1 class="page-header">Login</h1>

<div class="row">

<div class="col-md-6">
    <div class="well">
        <form asp-controller="User" asp-action="Login" method="POST" class="form">
            <div class="flash-err">@ViewBag.error</div>
            <div class="form-group">
                <span class="flash-err" asp-validation-for="email"></span>
                <input type="text" class="form-control" placeholder="Email..." asp-for="email">
            </div>
            <div class="form-group">
                <span class="flash-err" asp-validation-for="password"></span>
                <input type="password" class="form-control" placeholder="Password..." asp-for="password">
            </div>
            <input type="submit" class="btn btn-block btn-primary" value="Login">
        </form>
    </div>
</div>

<div class="col-md-6">
    <a href="/users/register" class="btn btn-success btn-block">Don't have an account? Register</a>
</div>

</div>

</div>
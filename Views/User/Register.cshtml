
@model csbb0328.ViewModels.RegisterViewModel

<div class="user-register container">

<h1 class="page-header">Register</h1>

<div class="row">

<div class="col-md-6">
    <div class="well">
        <form asp-controller="User" asp-action="Register" method="POST" class="form">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <span class="flash-err" asp-validation-for="name"></span>
                        <label asp-for="name">Name: </label>
                        <input type="text" class="form-control" placeholder="Name..." asp-for="name">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <span class="flash-err" asp-validation-for="email"></span>
                <label asp-for="email">Email: </label>
                <input type="text" class="form-control" placeholder="Email..." asp-for="email">
            </div>
           <div class="form-group">
                <span class="flash-err" asp-validation-for="description"></span>
                <label asp-for="description">Description: </label>
                <textarea class="form-control" placeholder="Description..." asp-for="description"></textarea>
            </div>
            <hr>
            <div class="form-group">
                <span class="flash-err" asp-validation-for="password"></span>
                <label asp-for="password">Password: </label>
                <input type="password" class="form-control" placeholder="Password..." asp-for="password">
            </div>
            <div class="form-group">
                <span class="flash-err" asp-validation-for="passwordConfirmation"></span>
                <label asp-for="passwordConfirmation">Confirm Password: </label>
                <input type="password" class="form-control" placeholder="Password Confirmation..." asp-for="passwordConfirmation">
            </div>
            <input type="submit" class="btn btn-block btn-primary" value="Register">
        </form>
    </div>
</div>

<div class="col-md-6">
    <a href="/users/login" class="btn btn-success btn-block">Already have an account? Login</a>
</div>

</div>

</div>
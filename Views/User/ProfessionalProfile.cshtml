@model csbb0328.Models.User

<div class="container-fluid">

    <div class="row">
        <div class="col-xs-7">
            <h1>Welcome, @ViewBag.currentUser.name<span>!</span></h1>
        </div>
        <div class="col-xs-2 col-xs-offset-1">
            <a href="/users" class="btn btn-primary btn-block">Users</a>
        </div>
        <div class="col-xs-2">
            <a href="/logout" class="btn btn-block btn-primary">Logout</a>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6">
            <h3>Description:</h3>
            <p>@ViewBag.currentUser.description</p>
        </div>
    </div>
    <div class="row">
        <h3>Your Professional Network:</h3>
        <ul class="connections">
            @foreach(var connect in ViewBag.connectedUsers)
            {
                if(connect.id != ViewBag.currentUser.id)
                {
                    <li><a href="/user/@connect.id">@connect.name</a></li>
                }
                
            }
        </ul>
    </div>
    <div class="col-xs-8">
        <h3>Invitations: </h3>
        <p>The following people asked you to be in their network.</p>
        <table>
            <thead>
                <th>Name</th>
                <th>Actions</th>
            </thead>
            <tbody>
                @foreach(var request in ViewBag.requestedUsers)
                {
                    
                    {
                        <tr>
                            <td>@request.name</td>
                            <td>
                                <a href="/acceptConnection/@request.id">Accept Request</a>
                                <a href="/deleteConnection/@request.id">Ignore</a>
                            </td>
                        </tr>
                    }
                    
                }
            </tbody>
        </table>
    </div>

</div>